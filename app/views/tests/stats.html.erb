<td class="stat-label <%= @stat_key %>">
  <p class="stat-label <%= @stat_key %>"><%= @stat_name %>:&nbsp;</p>
</td>

<td>
  <% if @stat_lv1 == @stat_lv18 %>
    <td class="stat-number-min">
      <p class="invisible">.</p>
    </td>
    <td class="stat-number <%= @stat_key %>">
      <p class="stat-number <%= @stat_key %>"><%= @stat_lv1.round(0) %></p>
    </td>
    <td class="stat-number-max">
      <p class="invisible">.</p>
    </td>
  <% else %>
    <td class="stat-number-min">
      <p class="stat-number-min <%= @stat_key %>"><%= @stat_lv1 %></p>
    </td>
    <td class="stat-number">
      <p>&nbsp;&ndash;&nbsp;</p>
    </td>
    <td class="stat-number-max">
      <p class="stat-number-max <%= @stat_key %>"><%= @stat_lv18 %></p>
    </td>
  <% end %>
</td>

