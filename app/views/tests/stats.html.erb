table.stats {
  overflow: hidden;
  padding: 0px;
  margin-top: 55px;
  td.stat-label {
    text-align: right;
  }
  td.stat-number-min {
    text-align: right;
  }
  td.stat-number-max {
    text-align: left;
  }
  td.stat-number {
    text-align: center;
  }
  p {
    font-size: 19px;
  }
  p.hpregen, p.spellblock {
  }
  tr.h-line {
    line-height: 1px;
    p {
      padding-bottom: 20px;
    }
  }
}